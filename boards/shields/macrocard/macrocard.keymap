#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/outputs.h>

#define WINDOW  0
#define DESKTOP 1
#define TABL    2
#define MUSIC   3
#define PRESENT 4

/ {
    macros {
        // Bluetooth clear macro
        bt_clr: bt_clr {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &bt BT_CLR>;
        };

        // None key macro
        none_macro: none_macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_tap &none>;
        };
    };
    combos {
        compatible = "zmk,combos";

        // Productivity layer combo
        combo_ly_d {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&to WINDOW>;
        };

        // Music layer combo
        combo_ly_m {
            timeout-ms = <50>;
            key-positions = <1 2>;
            bindings = <&to MUSIC>;
        };

        // Presentation layer combo
        combo_ly_p {
            timeout-ms = <50>;
            key-positions = <0 2>;
            bindings = <&to PRESENT>;
        };

        // Bootloader combo
        combo_reset {
            timeout-ms = <50>;
            key-positions = <0 1 2 3>;
            bindings = <&bootloader>;
        };
    };
    behaviors {
        // Bluetooth clear with keypress macro
        bt_ht: behavior_bt_ht {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <5000>;
            bindings = <&bt_clr>, <&kp>;
        };

        // Bluetooth clear with no keypress (&none exits smart toggle)
        bt_n: behavior_bt_n {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <5000>;
            bindings = <&bt_clr>, <&none_macro>;
        };

        // Window switcher behavior
        win_switch: win_switch {
            compatible = "zmk,behavior-smart-toggle";
            #binding-cells = <0>;
            bindings = <&kp LALT>, <&kp TAB>;
            ignored-key-positions = <4 5>;
        };
        
        // Tab switcher behavior
        tab_switch: tab_switch {
            compatible = "zmk,behavior-smart-toggle";
            #binding-cells = <0>;
            bindings = <&kp LCTRL>, <&kp TAB>;
            ignored-key-positions = <4 5>;
        };

        // Window switcher encoder behavior 
        win_enc: win_enc {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&win_switch>, <&kp LS(TAB)>;
        };
        
        // Tab switcher encoder behavior
        tab_enc: tab_enc {
            compatible = "zmk,behavior-sensor-rotate";
            #sensor-binding-cells = <0>;
            bindings = <&tab_switch>, <&kp LS(TAB)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        window_layer {
            bindings = <
                &none                       // Switch 1 - None
                &to DESKTOP                 // Switch 2 - Layer tab
                &to TABL                    // Switch 3 - Layer zoom
                &bt_n &bt_clr &none_macro   // Encoder switch - toggle alt off
                &none
                &none
            >;
            
            sensor-bindings = <&win_enc>;
        };
        
        desktop_layer {
            bindings = <
                &to WINDOW                  // Switch 1 - Layer window
                &none                       // Switch 2 - Layer tab
                &to TABL                    // Switch 3 - None
                &bt_n &bt_clr &none_macro   // Encoder switch - hold for BT clear
                &none
                &none
            >;
            
            sensor-bindings = <&inc_dec_kp LC(LG(RIGHT)) LC(LG(LEFT))>;
        };

        tab_layer {
            bindings = <
                &to WINDOW                  // Switch 1 - Layer window
                &to DESKTOP                 // Switch 2 - None
                &none                       // Switch 3 - Layer zoom
                &bt_n &bt_clr &none_macro   // Encoder switch - toggle ctrl off
                &none
                &none
            >;
            
            sensor-bindings = <&tab_enc>;
        };
        
        music_layer {
            bindings = <
                &kp C_PREV                  // Switch 1 - Previous track
                &kp C_PP                    // Switch 2 - Play/Pause
                &kp C_NEXT                  // Switch 3 - Next track
                &bt_ht &bt_clr C_MUTE       // Encoder switch - tap for mute, hold for BT clear
                &none
                &none
            >;
            
            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
        
        present_layer {
            bindings = <
                &kp F5                      // Switch 1 - Start presentation
                &kp ESC                     // Switch 2 - Exit presentation
                &kp B                       // Switch 3 - Black screen toggle
                &bt_ht &bt_clr HOME         // Encoder switch - Tap to return to the first slide, hold for BT clear
                &none
                &none
            >;
            
            sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
        };
    };
};